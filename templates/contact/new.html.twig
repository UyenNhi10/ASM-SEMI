{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        h2{
            text-align: center;
            color: #3482A3;
        }
        .contact-section {
            padding: 80px 0;
        }

        .contact-form {
            max-width: 500px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 5px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .contact-form .form-group {
            margin-bottom: 20px;
        }

        .contact-form label {
            font-weight: bold;
            color: #333;
        }

        .contact-form input[type="text"],
        .contact-form input[type="email"]{
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .contact-form textarea {
            resize: vertical;
        }

        .contact-info {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin-top: 30px;
        }

        .contact-info p {
            margin: 0;
            padding: 5px;
        }

        .contact-info i {
            font-size: 18px;
            color: #007bff;
            margin-right: 5px;
        }

        .contact-image {
            width: 100%;
            margin-top: 30px;
            float: right;
        }

    </style>

    <div class="container">
        <div class="row contact-section">
            <div class="col-md-6">
                <div class="contact-form">
                    <h2 class="mb-4">Get In Touch</h2>


                        <div class="form-group">
                            {{ include('contact/_form.html.twig') }}
                        </div>


                    <a href="{{ path('home') }}" class="btn btn-primary">Back to List</a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="contact-info">
                    <p><i class="fas fa-map-marker-alt"></i> 123 Street, City, Country</p>
                    <p><i class="fas fa-phone"></i> +123 456 789</p>
                    <p><i class="fas fa-envelope"></i> info@example.com</p>
                </div>

                <img src="{{ asset('image/s2.jpg') }}" alt="Image" class="contact-image">
            </div>
        </div>
    </div>
    </body>
{% endblock %}
