<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="/Image/0.jpg">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="/Build/Base.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://bootswatch.com/5/cerulean/bootstrap.min.css">
        <link href="https://icons.getbootstrap.com/icons/cart4/" rel="stylesheet">
<style>

</style>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

</head>

<div class="border-bottom py-2 bg-light">
    <div class="container ">
        <div class="row">
            <div class="col-sm-6">
                <select  class="me-3 border-0 bg-light">
                    <option value="en-us">EN-US</option>
                </select>
            </div>

            <div class="col-sm-6 d-md-block-d-sm-block text-end">
                <form>
                    <a class="btn btn-primary my-2 my-sm-0" href="/{{ app.user ? 'logout' : 'login' }}" @click="isOpen = false">
                        {{ app.user ? 'LOGOUT' : 'LOGIN'}}
                    </a>
                </form>

            </div>
        </div>
    </div>
</div>



<nav class="navbar navbar-expand-sm navbar-dark sticky-top" style="background-color: #4F839A;">
    <div class="container-fluid">
        <a class="navbar-brand p-3" href="#">

            <div class="logo">
                <b><span>FL</span><span>O</span><span>W</span><span>ER</span></b>
            </div>
        </a>



        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse justify-content-center" id="collapsibleNavbar" >
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000">HOME</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/show_all">PRODUCT</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"role="button" data-bs-toggle="dropdown">CATALOG</a>
                    <ul class="dropdown-menu" >
                        <li><a class="dropdown-item" href="http://127.0.0.1:8000/bouquet">Flower Bouquet</a></li>
                        <li><a class="dropdown-item" href="http://127.0.0.1:8000/basket">Flower Basket</a></li>
                        <li><a class="dropdown-item" href="http://127.0.0.1:8000/wedding">Wedding Flowers</a></li>
                        <li><a class="dropdown-item" href="http://127.0.0.1:8000/congratulations">Congratulations Flowers</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/about">ABOUT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/contact/new">CONTACT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/flowerwhisper">FLOWER WHISPER</a>
                </li>

            </ul>
        </div>
        <form class="d-flex" action="{{ path('app_search') }}" method="get">
            <input class="form-control me-2" type="text" name="keyword" placeholder="Search products">
            <button class="btn-search btn-primary" type="submit">Search</button>
        </form>


    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>
</div>
</br>
<footer class="bg-light">
    <div class="container text-center py-3">
        &copy; 2023 Your Company. All rights reserved.
    </div>
</footer>
</body>
</html>
