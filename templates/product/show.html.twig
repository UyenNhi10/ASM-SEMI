{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <style>
        .container-form {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #3482A3;
        }

        table {
            width: 100%;
            margin-bottom: 20px;
        }

        th {
            width: 30%;
            text-align: left;
            font-weight: bold;
        }

        td {
            padding: 8px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-custom {
            background-color: #5BA3A3;
            border-color: #5BA3A3;
        }

        .btn-custom:hover {
            background-color: #65A8A8;
            border-color: #65A8A8;
        }
    </style>

    <div class="container-form">
        <h1>Product Details</h1>

        <table class="table table-striped">
            <tbody>
            <tr>
                <th scope="row">Id:</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name:</th>
                <td>{{ product.NameProduct }}</td>
            </tr>
            <tr>
                <th scope="row">Image:</th>
                <td>{{ product.ImageProduct }}</td>
            </tr>
            <tr>
                <th scope="row">Price:</th>
                <td>{{ product.PriceProduct }}</td>
            </tr>
            <tr>
                <th scope="row">Description:</th>
                <td>{{ product.DescriptionProduct }}</td>
            </tr>
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-custom" href="{{ path('app_product_index') }}">Back to List</a>
            <a class="btn btn-secondary" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
        </div>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
