{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <style>
        /* Custom styles for the Edit Product page */
        h2 {
            text-align: center;
            color: #3482A3;
            font-size: 28px;
            margin-bottom: 30px;
        }

        .contact-section {
            padding: 50px 0;
            background-color: #f8f8f8;
        }

        .contact-form {
            max-width: 500px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 5px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .contact-form .form-group {
            margin-bottom: 20px;
        }

        .contact-form label {
            font-weight: bold;
            color: #333;
        }

        .contact-form input[type="text"],
        .contact-form textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .contact-form textarea {
            resize: vertical;
        }

        .contact-form .btn-secondary {
            background-color: #888;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .contact-form .btn-secondary:hover {
            background-color: #666;
        }
    </style>
    <div class="container">
        <div class="row contact-section">
            <div class="col-md-8 offset-md-2">
                <div class="contact-form">
                    <h2>Edit Product</h2>
                    <div class="form-group">
                        {{ include('product/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary" href="{{ path('app_product_index') }}">Back to List</a>
                    </div>
                    <div class="form-group">
                        {{ include('product/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
